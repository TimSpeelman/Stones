{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program w/ TS-Node",
            // "preLaunchTask": "typescript",
            "program": "${workspaceFolder}/src/apps/org/server/index.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "timeout": 999999,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test All w/ Mocha",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--nolazy",
                "--ui",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "--require",
                "ts-node/register",
                "--require",
                "tsconfig-paths/register",
                "${workspaceFolder}/test/**/*.spec.ts"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test Current File w/ Mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--nolazy",
                "--ui",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "--require",
                "ts-node/register",
                // "--require",
                // "tsconfig-paths/register",
                "${relativeFile}"
            ],
            // "outFiles": [ "${workspaceFolder}/dist/**/*.js" ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Current File w/ TS-Node",
            "program": "${workspaceRoot}/node_modules/ts-node/dist/bin",
            "args": [
                // "--require",
                // "tsconfig-paths/register",
                "${relativeFile}"
            ],
            // "outFiles": [ "${workspaceFolder}/dist/**/*.js" ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:9000",
            "breakOnLoad": true,
            "webRoot": "${workspaceRoot}/dist",
            "sourceMaps": true,
            "disableNetworkCache": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "${webRoot}/../*",
                "webpack:///./*": "${webRoot}/../*",
                "webpack:///src/*": "${webRoot}/../src/*",
                "webpack:///./~/*": "${webRoot}/../node_modules/*"
            }
        },
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": [
                "Launch Program w/ TS-Node",
                "Launch Chrome against localhost"
            ]
        }
    ]
}